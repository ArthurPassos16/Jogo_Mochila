#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#include "leituras.h"
#include "logica.h"

int main(){
    Objeto *objeto=NULL;
    Mochila *mochila=NULL;
    int resultado;
    char s;

    objeto=leituraObjeto();
    mochila=leituraMochila();
    srand(time(NULL));
    int opcao, cargaBolsa;
    do{
        printf("1 - JOGAR\n2 - RECORDES\n3 - SAIR\n");
        scanf("%d",&opcao);
        switch(opcao){
            case 1:
                printf("-----------------------JOGO-----------------------\n");
                printf("PESO\tVALOR\t\n");
                for(int i=0;i<mochila->num_itens;i++){
                  printf(" %d\t\t %d\t\n",objeto[i].peso,objeto[i].valor);
                }
                resultado=knapSack(mochila->cap_max,objeto, mochila->num_itens);
                printf("\nResultado: %d\n\n",resultado);
            break;
            case 2:
                printf("\nRECORDES\n");
                getchar();
            break;
            case 3:
                printf("JOGO ENCERRADO!\n");
            break;
            default:
                printf("Opcao Invalida!\n");
            break;
        }
    }while(opcao!=3);
    return 0;
}
